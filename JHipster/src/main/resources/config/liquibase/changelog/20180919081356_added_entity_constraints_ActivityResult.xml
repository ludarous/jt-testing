<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity ActivityResult.
    -->
    <changeSet id="20180919081356-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="activity_group_result_id"
                                 baseTableName="activity_result"
                                 constraintName="fk_activity_result_activity_group_result_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity_group_result"/>

        <addForeignKeyConstraint baseColumnNames="activity_id"
                                 baseTableName="activity_result"
                                 constraintName="fk_activity_result_activity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity"/>

        <addForeignKeyConstraint baseColumnNames="activity_group_id"
                                 baseTableName="activity_result"
                                 constraintName="fk_activity_result_activity_group_id"
                                 referencedColumnNames="id"
                                 referencedTableName="activity_group"/>

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="activity_result"
                                 constraintName="fk_activity_result_event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="activity_result"
                                 constraintName="fk_activity_result_person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="person"/>

    </changeSet>
</databaseChangeLog>
